{
  "name": "@selemondev/svelte-marquee",
  "version": "0.0.4",
  "description": "A Beautiful Marquee component for Svelte âœ¨",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "build:css:lib": "pnpx @tailwindcss/cli --i ./src/lib/css/tailwind.css --output ./dist/style.css --optimize",
    "build:css:app": "pnpx @tailwindcss/cli --i ./src/assets/css/tailwind.css --output ./dist/index.css --optimize",
    "package": "svelte-kit sync && svelte-package && pnpm build:css:app && pnpm build:css:lib && publint",
    "prepublishOnly": "npm run package",
    "generate:release:minor": "npx changelogen@latest --release --minor",
    "generate:release:major": "npx changelogen@latest --release --major",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selemondev/svelte-marquee.git"
  },
  "keywords": [
    "svelte",
    "marquee",
    "tailwindcss",
    "typescript",
    "svelte-marquee"
  ],
  "author": "Selemondev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/selemondev/svelte-marquee/issues"
  },
  "homepage": "https://github.com/selemondev/svelte-marquee#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.47.3",
    "@sveltejs/package": "^2.5.4",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/eslint": "8.56.0",
    "@types/node": "^24.9.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-svelte": "^3.12.5",
    "publint": "^0.3.15",
    "svelte": "^5.41.3",
    "svelte-check": "^3.8.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@selemondev/shiki-transformer-copy-button": "^0.0.2",
    "@tailwindcss/vite": "^4.1.16",
    "clsx": "^2.1.1",
    "shiki-block-svelte": "^1.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7"
  },
  "packageManager": "pnpm@10.19.0"
}
