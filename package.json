{
  "name": "@selemondev/svelte-marquee",
  "version": "0.0.4",
  "description": "A Beautiful Marquee component for Svelte âœ¨",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "build:css": "tailwindcss -i ./src/assets/css/tailwind.css -o ./dist/style.css",
    "package": "svelte-kit sync && svelte-package && pnpm build:css && publint",
    "prepublishOnly": "npm run package",
    "generate:release:minor": "npx changelogen@latest --release --minor",
    "generate:release:major": "npx changelogen@latest --release --major",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/selemondev/svelte-marquee.git"
  },
  "keywords": [
    "svelte",
    "marquee",
    "tailwindcss",
    "typescript",
    "svelte-marquee"
  ],
  "author": "Selemondev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/selemondev/svelte-marquee/issues"
  },
  "homepage": "https://github.com/selemondev/svelte-marquee#readme",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-vercel": "^5.10.2",
    "@sveltejs/kit": "^2.37.1",
    "@sveltejs/package": "^2.5.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-plugin-svelte": "^3.12.2",
    "postcss": "^8.5.6",
    "publint": "^0.3.12",
    "svelte": "^5.38.7",
    "svelte-check": "^3.8.6",
    "tailwindcss": "^4.1.15",
    "tslib": "^2.8.1",
    "typescript": "^5.9.2",
    "vite": "^5.4.19"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@selemondev/shiki-transformer-copy-button": "^0.0.2",
    "clsx": "^2.1.1",
    "shiki-code-block-svelte": "^0.0.3-beta.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "packageManager": "pnpm@10.15.1"
}
